<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Class="MauiPerfDebugOverlay.Controls.PerformanceOverlayView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="Root" 
             IsVisible="True"
             Opacity="0.95">

    <Frame x:Name="OverlayFrame"
           BackgroundColor="#99000000"
           Padding="8"
           CornerRadius="10"
           HasShadow="True"
           HorizontalOptions="Start"
           VerticalOptions="Start">
    <Frame.GestureRecognizers>
        <PanGestureRecognizer PanUpdated="OnPanUpdated" />
        <!--<TapGestureRecognizer Tapped="OnTappedToggleCompact"
                              NumberOfTapsRequired="2" />-->
    </Frame.GestureRecognizers>

        <VerticalStackLayout x:Name="MetricsStack"
                             Spacing="2">

            <Label x:Name="ScoreLabel"
                   FontAttributes="Bold"
                   FontSize="16"
                   TextColor="Gray"
                   Text="Overall: --/10" />
            <Label x:Name="FpsLabel"
                   FontAttributes="Bold"
                   FontSize="14"
                   TextColor="Gray"
                   Text="FPS: --" />
            <Label x:Name="CpuLabel"
                   FontAttributes="Bold"
                   FontSize="14"
                   TextColor="Gray"
                   Text="CPU: --%" />
            <Label x:Name="MemoryLabel"
                   FontAttributes="Bold"
                   FontSize="14"
                   TextColor="Gray"
                   Text="Memory: -- MB" />
            <Label x:Name="ThreadsLabel"
                   FontAttributes="Bold"
                   FontSize="14"
                   TextColor="Gray"
                   Text="Threads: --" /> 

        </VerticalStackLayout>

    </Frame>
</ContentView>
